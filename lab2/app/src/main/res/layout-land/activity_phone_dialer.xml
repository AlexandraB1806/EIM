<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/small_space"
    android:paddingRight="@dimen/small_space"
    tools:context=".PhoneDialerActivity">

    <EditText
        android:id="@+id/phone_number_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:enabled="false"
        android:gravity="center"
        android:layout_marginTop="@dimen/medium_space"
        android:layout_marginBottom="@dimen/big_space"
        android:layout_marginHorizontal="@dimen/small_space"/>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:rowCount="4"
        android:columnCount="5">

        <Button
            android:id="@+id/number_1_button"
            style="@style/Widget.AppCompat.Button"
            android:layout_row="0"
            android:layout_column="0"
            android:text="@string/number_1"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/number_2_button"
            style="@style/Widget.AppCompat.Button"
            android:layout_row="0"
            android:layout_column="1"
            android:text="@string/number_2"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/number_3_button"
            style="@style/Widget.AppCompat.Button"
            android:layout_row="0"
            android:layout_column="2"
            android:text="@string/number_3"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/number_4_button"
            style="@style/Widget.AppCompat.Button"
            android:layout_row="0"
            android:layout_column="3"
            android:text="@string/number_4"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/number_5_button"
            style="@style/Widget.AppCompat.Button"
            android:layout_row="0"
            android:layout_column="4"
            android:text="@string/number_5"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/number_6_button"
            style="@style/Widget.AppCompat.Button"
            android:layout_row="1"
            android:layout_column="0"
            android:text="@string/number_6"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/number_7_button"
            style="@style/Widget.AppCompat.Button"
            android:layout_row="1"
            android:layout_column="1"
            android:text="@string/number_7"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/number_8_button"
            style="@style/Widget.AppCompat.Button"
            android:layout_row="1"
            android:layout_column="2"
            android:text="@string/number_8"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/number_9_button"
            style="@style/Widget.AppCompat.Button"
            android:layout_row="1"
            android:layout_column="3"
            android:text="@string/number_9"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/number_0_button"
            style="@style/Widget.AppCompat.Button"
            android:layout_row="1"
            android:layout_column="4"
            android:text="@string/number_0"
            android:textColor="@android:color/black" />

        <ImageButton
            android:id="@+id/outgoing_call_button"
            android:src="@drawable/outgoing_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_gravity="center"
            android:background="@null" />

        <Button
            android:id="@+id/star_button"
            style="@style/Widget.AppCompat.Button"
            android:layout_row="2"
            android:layout_column="1"
            android:text="@string/star"
            android:textColor="@android:color/black" />

        <ImageButton
            android:id="@+id/backspace_button"
            android:src="@drawable/backspace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_gravity="center"
            android:background="@null" />

        <Button
            android:id="@+id/diez_button"
            style="@style/Widget.AppCompat.Button"
            android:layout_row="2"
            android:layout_column="3"
            android:text="@string/diez"
            android:textColor="@android:color/black" />

        <ImageButton
            android:id="@+id/missed_call_button"
            android:src="@drawable/missed_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="4"
            android:layout_gravity="center"
            android:background="@null" />

        <ImageButton
            android:id="@+id/contact_button"
            android:src="@drawable/contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_gravity="center"
            android:background="@null" />
    </GridLayout>

</LinearLayout>
